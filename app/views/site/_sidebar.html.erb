<% sites.each do |site| %>
  <div class="sidebar__siteTitle">
    <%= site.name %>
  </div>

  <ul class="sidebar__novelTitle">
  <% site.novels.each do |novel| %>
    <li>
      <% deleted = novel.deleted_at.present? ? 'deleted' : '' %>
      <% non_target = novel.non_target ? '[×] ' : '' %>
      <% if non_target.blank? %>
        <a href="<%= novel.target_url %>" rel="noopener noreferrer" target="_blank">[◆]</a>
      <% end %>
      <a class="<%= deleted %>" href="/<%= site.code %>/<%= novel.id %>#main">
        <%= non_target %><%= novel.replace_title %>
      </a>
    </li>
  <% end %>
  </ul>
<% end %>
